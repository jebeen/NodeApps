<div class="row profile-header">
  <div class="col-md-12">
<h1>Welcome <b><%= name %></b> </h1>
</div>
</div>

<div class="row profile-body">
  <span><%= message %></span>
  <%
  let path="../";
  for(var [i,j] of Object.entries(data)){
    path+=j.picture;
  %>
  <form action="/updateProfile" method="post" enctype="multipart/form-data">
    <div class="col-md-3 profile-picture">
      <img src=<%= path %> alt="No Picture" width="100" height="100">
      <%
      if(j.picture == '') {
      %>
      <input type="file" name="picture">
      <%
    }
    %>
  </div>
  <div class="col-md-9 details">
    <input type="text" name="name" value=<%= j.name %>>
    <input type="email" name="email" value=<%= j.email %> >
    <input type="text" name="profession" value=<%= j.profession %>>
    <input type="date" name="doj" value=<%= j.doj%>>
    <select name="department">
      <%
      for(var [i,j] of Object.entries(depts)){
      %>
    <option value=<%= j.dept_id %>><%= j.name %></option>
      <%
    }
    %>
  </select>
  <input type="submit" value="Submit">
  </div>
  </form>
  <%
}
  %>
</div>

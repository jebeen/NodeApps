<%- include("header") %>
<div class="col-md-6 login-section">
  <h3>Login</h3>
  <span id="message"><%= status%></span>
  <form action="/process-form" id="login" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" name="name" class="form-control" value="<%=(typeof inputData!='undefined')? inputData.name:''%>">
      <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.name!='undefined' )? errors.name.msg:''%></p>
    </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input type="email" class="form-control" name="email" placeholder="name@example.com" value="<%=(typeof inputData!='undefined')? inputData.email:''%>">
      <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.email!='undefined' )? errors.email.msg:''%></p>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" value="<%=(typeof inputData!='undefined')? inputData.emailAddress:''%>">
      <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.password!='undefined' )? errors.password.msg:''%></p>
    </div>
    <input type="submit" class="button btn btn-primary" value="Submit"/>
  </form>
</div>
<%- include("footer") %>
